@model IEnumerable<RecipeAPI.Models.Recipe>

@{
    ViewData["Title"] = "Favorites";
}

<h2>Favorite Recipes</h2>

<table class="table">
    <thead>
        <tr>
            <td>
            </td>
            <td>
                <p><b>Recipe Name</b></p>
            </td>
            <td>
                <p><b>Ingredients</b></p>
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Thumbnail)" />
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.Href)">@Html.DisplayFor(modelItem => item.Title)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>
                <td>
                    <a asp-action="DeleteFavorites" asp-route-id="@item.Id">Delete from Favorites</a>
                </td>
            </tr>
        }
    </tbody>
</table>
